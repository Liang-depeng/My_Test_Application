<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".test.TestActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送广播"
        android:visibility="gone" />

    <Button
        android:id="@+id/cai_ay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cai"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/train_ay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="train"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/phone_ay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone query"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/constellation_ay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="constellation"
        android:textAllCaps="false"/>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/service_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="service_test"
        android:textAllCaps="false"/>
    <TextView
        android:id="@+id/service_test_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>